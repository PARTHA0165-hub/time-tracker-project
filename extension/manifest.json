{
  "manifest_version": 3,
  "name": "ProdTime Tracker",
  "description": "Track time per website and upload to backend for productivity analytics.",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "alarms",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ProdTime Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
